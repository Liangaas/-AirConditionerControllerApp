<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true">

    <ImageView
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/tab_up"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/iv_up"/>

    <ImageView
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/tab_down"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/iv_down"/>

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/cold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/iv_cold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_switch"/>

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/on_off"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/iv_switch"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="168dp"/>

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/hot"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/iv_hot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_switch"
        app:layout_constraintEnd_toEndOf="parent"/>

</RelativeLayout>

</android.support.constraint.ConstraintLayout>