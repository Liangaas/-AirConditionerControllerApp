<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:background="@color/secondary_text"
    tools:context="com.example.a24442.air_conditioner.Activity.GPSModeEdit"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/title"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/HomeLocation"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/LocationText"
        android:text="@string/locaton_text"
        android:textColor="@color/lightpink"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="220dp"
        android:id="@+id/LocationEdit"
        android:layout_marginLeft="100dp"
        android:textColor="@color/lightpink"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/LocationText"
        android:layout_alignBaseline="@+id/LocationText"/>

</RelativeLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/OpenDis"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:id="@+id/OpenDisText"
        android:text="@string/open_dist_text"
        android:textColor="@color/lightpink"
        android:minLines="2"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:id="@+id/OpenDisEdit"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textColor="@color/lightpink"
        android:layout_alignBaseline="@+id/OpenDisText"
        android:digits="@string/digits"
        android:layout_alignLeft="@+id/OpenDisText"/>

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/openLength"
        android:layout_marginLeft="120dp"

        android:popupBackground="@color/secondary_text"
        android:layout_alignBaseline="@+id/OpenDisEdit"
        android:layout_alignLeft="@+id/OpenDisEdit"
        android:entries="@array/lengths"/>

</RelativeLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/CloseDis"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:id="@+id/CloseDisText"
        android:text="@string/close_dist_text"
        android:textColor="@color/lightpink"
        android:minLines="2"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:id="@+id/CloseDisEdit"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textColor="@color/lightpink"
        android:layout_alignBaseline="@+id/CloseDisText"
        android:digits="@string/digits"
        android:layout_alignLeft="@+id/CloseDisText"/>

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/closeLength"
        android:layout_marginLeft="120dp"
        android:layout_alignBaseline="@+id/CloseDisEdit"
        android:layout_alignLeft="@+id/CloseDisEdit"
        android:entries="@array/lengths"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/TempRange"
        android:layout_marginTop="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:id="@+id/TempRangeText"
        android:text="@string/temp_range_text"
        android:textColor="@color/lightpink"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/TempRangeEdit1"
        android:layout_marginLeft="100dp"
        android:textColor="@color/lightpink"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/TempRangeText"
        android:digits="@string/digits"
        android:layout_alignLeft="@+id/TempRangeText"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_marginLeft="160dp"
        android:text="°C —— —— "
        android:textColor="@color/lightpink"
        android:layout_alignBottom="@+id/TempRangeText"
        android:layout_alignBaseline="@+id/TempRangeText"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/TempRangeEdit2"
        android:layout_marginLeft="230dp"
        android:textAlignment="center"
        android:textColor="@color/lightpink"
        android:layout_alignBaseline="@+id/TempRangeText"
        android:digits="@string/digits"
        android:layout_alignLeft="@+id/TempRangeText"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_marginLeft="290dp"
        android:text="°C"
        android:textColor="@color/lightpink"
        android:layout_alignBottom="@+id/TempRangeText"
        android:layout_alignBaseline="@+id/TempRangeText"/>

</RelativeLayout>

</RelativeLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/IdealTemp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:id="@+id/IdealTempText"
        android:text="@string/ideal_temp_text"
        android:textColor="@color/lightpink"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:id="@+id/IdealTempEdit"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textColor="@color/lightpink"
        android:layout_alignBaseline="@+id/IdealTempText"
        android:digits="@string/digits"
        android:layout_alignLeft="@+id/IdealTempText"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_marginLeft="220dp"
        android:text="°C"
        android:textColor="@color/lightpink"/>

</RelativeLayout>

</LinearLayout>