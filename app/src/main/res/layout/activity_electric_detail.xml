<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.a24442.air_conditioner.ElectrcityList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/title"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/months"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/monthChoose">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openTime"
                android:textSize="20dp"
                android:id="@+id/durTime"
                />
            <TextView
                android:layout_marginLeft="250dp"
                android:layout_alignBaseline="@+id/durTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeSet"
                android:text="20h"
                android:textSize="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electric"
                android:textSize="20dp"
                android:id="@+id/electric"
                />
            <TextView
                android:layout_marginLeft="250dp"
                android:layout_alignBaseline="@+id/electric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150度"
                android:textSize="20dp"
                android:id="@+id/electricSet"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electricPrice"
                android:textSize="20dp"
                android:id="@+id/price"
                />
            <TextView
                android:layout_marginLeft="250dp"
                android:layout_alignBaseline="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5元／度"
                android:textSize="20dp"
                android:id="@+id/priceSet"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electricCost"
                android:textSize="20dp"
                android:id="@+id/cost"
                />
            <TextView
                android:layout_marginLeft="250dp"
                android:layout_alignBaseline="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300元"
                android:textSize="20dp"
                android:id="@+id/costSet"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/costDetail">
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/cost"
                android:id="@+id/detail"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="250dp"
                android:src="@drawable/detail"
                android:id="@+id/detailImage"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/chart">
            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/costChart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>